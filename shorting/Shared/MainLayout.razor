@using MudBlazor.Utilities
@inherits LayoutComponentBase

<PageTitle>shorting</PageTitle>
<MudThemeProvider IsDarkMode="true" Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{

    MudTheme _theme = new()
        {
            LayoutProperties = new LayoutProperties { DefaultBorderRadius = "24px" },
            
            PaletteDark = new PaletteDark
            {
                Primary = "#AB6F7F",
                Background = (MudColor) "#232526",
                Surface = (MudColor) "#313435",
            }
        };

}
